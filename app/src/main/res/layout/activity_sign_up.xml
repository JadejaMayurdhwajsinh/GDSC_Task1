<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context=".SignUpActivity">

    <!-- Heading: Create an account -->
    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Subheading: Get to know about all GDG events -->
    <TextView
        android:id="@+id/tv_gdg_events_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get to know about all the GDG events"
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center" />

    <!-- Subheading: Simply by creating a new account -->
    <TextView
        android:id="@+id/tv_create_new_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simply by creating a new account"
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingBottom="32dp" />

    <!-- Username Field -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your username"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Phone Number Field -->
    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your phone number"
        android:inputType="phone"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Password Field -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#000000"
        android:drawableEnd="@drawable/ic_eye"
        android:layout_marginBottom="24dp" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007bff"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
         />

    <!-- Divider with "Or With" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#cccccc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or With"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#cccccc" />
    </LinearLayout>

    <!-- Sign Up with Facebook Button -->
    <Button
        android:id="@+id/btn_sign_up_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up with Facebook"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/ic_facebook"
        android:backgroundTint="#3b5998"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:drawablePadding="8dp" />

    <!-- Sign Up with Google Button -->
    <Button
        android:id="@+id/btn_sign_up_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up with Google"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_google"
        android:backgroundTint="#E6E1E1"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:drawablePadding="8dp" />

    <!-- Already have an account? Login -->
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
